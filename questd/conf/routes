# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.web.rest.Application.index

#######################
# WS
#######################

# Auth
POST	/rest/loginfb						controllers.web.rest.LoginWS.loginfb

# Requesting profile
POST	/rest/getProfile					controllers.web.rest.ProfileWS.getProfile

# Generating quests 
POST	/rest/getQuestThemeCost				controllers.web.rest.ProposeQuestWS.getQuestThemeCost
POST	/rest/purchaseQuestTheme			controllers.web.rest.ProposeQuestWS.purchaseQuestTheme

POST	/rest/getQuestThemeTakeCost			controllers.web.rest.ProposeQuestWS.getQuestThemeTakeCost
POST	/rest/takeQuestTheme				controllers.web.rest.ProposeQuestWS.takeQuestTheme

POST	/rest/proposeQuest					controllers.web.rest.ProposeQuestWS.proposeQuest

POST	/rest/giveUpQuestProposal			controllers.web.rest.ProposeQuestWS.giveUpQuestProposal
POST	/rest/getQuestProposalGiveUpCost	controllers.web.rest.ProposeQuestWS.getQuestProposalGiveUpCost

# Solve quest
POST	/rest/getQuestCost					controllers.web.rest.SolveQuestWS.getQuestCost
POST	/rest/purchaseQuest					controllers.web.rest.SolveQuestWS.purchaseQuest

POST	/rest/getTakeQuestCost				controllers.web.rest.SolveQuestWS.getTakeQuestCost
POST	/rest/takeQuest						controllers.web.rest.SolveQuestWS.takeQuest

POST	/rest/proposeSolution				controllers.web.rest.SolveQuestWS.proposeSolution

POST	/rest/getQuestGiveUpCost			controllers.web.rest.SolveQuestWS.getQuestGiveUpCost
POST	/rest/giveUpQuest					controllers.web.rest.SolveQuestWS.giveUpQuest

# Vote quest proposal
POST	/rest/getQuestProposalToVote		controllers.web.rest.VoteQuestProposalWS.getQuestProposalToVote
POST	/rest/voteQuestProposal				controllers.web.rest.VoteQuestProposalWS.voteQuestProposal

# Vote quest solution
POST	/rest/getQuestSolutionToVote		controllers.web.rest.VoteQuestSolutionWS.getQuestSolutionToVote
POST	/rest/voteQuestSolution				controllers.web.rest.VoteQuestSolutionWS.voteQuestSolution

# Daily result
POST	/rest/getDailyResult				controllers.web.rest.DailyResultWS.getDailyResult
POST	/rest/getRightsAtLevel				controllers.web.rest.DailyResultWS.getRightsAtLevel

# Content requests
POST	/rest/getQuest						controllers.web.rest.ContentWS.getQuest
POST	/rest/getSolution					controllers.web.rest.ContentWS.getSolution
POST	/rest/getPublicProfile				controllers.web.rest.ContentWS.getPublicProfile

POST	/rest/getSolutionsForQuest			controllers.web.rest.ContentWS.getSolutionsForQuest
POST	/rest/getSolutionsForPerson			controllers.web.rest.ContentWS.getSolutionsForPerson
POST	/rest/getQuestsForPerson			controllers.web.rest.ContentWS.getQuestsForPerson




#######################
# Debug (Should be removed in production)
#######################
POST	/rest/debug/shiftDailyResult		controllers.web.rest.DailyResultWS.shiftDailyResult


#######################
# Admin
#######################
GET		/admin								controllers.web.admin.AdminApp.index

GET		/admin/themes						controllers.web.admin.ThemesCRUD.themes(id = "")
GET		/admin/themes/byid/:id				controllers.web.admin.ThemesCRUD.themes(id)
POST	/admin/themes/createTheme			controllers.web.admin.ThemesCRUD.createThemeCB
GET		/admin/themes/deleteTheme/:id		controllers.web.admin.ThemesCRUD.deleteThemeCB(id: String)

GET		/admin/config						controllers.web.admin.Config.config(name = "")
GET		/admin/config/byname/:name			controllers.web.admin.Config.config(name)
POST	/admin/config/configUpdate/:name	controllers.web.admin.Config.configUpdate(name)


#######################
# Test client
#######################
GET     /testclient                 		controllers.web.testclient.Client.index
GET     /testclient/loginfb           		controllers.web.testclient.Client.loginfb

POST	/testclient/loginfbTarget			controllers.web.testclient.Client.loginfbTarget

GET     /testclient/main            		controllers.web.testclient.App.main




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		controllers.Assets.at(path="/public", file)
