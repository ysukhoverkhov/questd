# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.web.rest.Application.index

#######################
# WS
#######################
# Auth
POST	/rest/loginfb						controllers.web.rest.LoginWS.loginfb

# Requesting profile
POST	/rest/getProfile					controllers.web.rest.ProfileWS.getProfile

# Generating quests 
POST	/rest/getQuestThemeCost				controllers.web.rest.ProposeQuestWS.getQuestThemeCost
POST	/rest/purchaseQuestTheme			controllers.web.rest.ProposeQuestWS.purchaseQuestTheme
POST	/rest/takeQuestTheme				controllers.web.rest.ProposeQuestWS.takeQuestTheme
POST	/rest/proposeQuest					controllers.web.rest.ProposeQuestWS.proposeQuest


#######################
# Admin
#######################
GET		/admin								controllers.web.admin.AdminApp.index

GET		/admin/themes						controllers.web.admin.ThemesCRUD.themes(id = "")
GET		/admin/themes/byid/:id				controllers.web.admin.ThemesCRUD.themes(id)
POST	/admin/themes/createTheme			controllers.web.admin.ThemesCRUD.createThemeCB
GET		/admin/themes/deleteTheme/:id		controllers.web.admin.ThemesCRUD.deleteThemeCB(id: String)

GET		/admin/config						controllers.web.admin.Config.config(name = "")
GET		/admin/config/byname/:name			controllers.web.admin.Config.config(name)
POST	/admin/config/configUpdate/:name	controllers.web.admin.Config.configUpdate(name)


#######################
# Test client
#######################
GET     /testclient                 		controllers.web.testclient.Client.index
GET     /testclient/loginfb           		controllers.web.testclient.Client.loginfb

POST	/testclient/loginfbTarget			controllers.web.testclient.Client.loginfbTarget

GET     /testclient/main            		controllers.web.testclient.App.main




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               		controllers.Assets.at(path="/public", file)
